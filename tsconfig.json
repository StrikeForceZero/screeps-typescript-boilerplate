{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./typings/index.d.ts",
    "./src/**/*.ts"
  ],
  "files": [
    "./src/main.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false,
    "forkChecker": true,
    "useCache": true
  }
}